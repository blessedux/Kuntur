---
import '../styles/global.css'
---

<!doctype html>
<html class="h-full" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link
      rel="android-chrome-icon"
      sizes="192x192"
      href="/apple-touch-icon.png"
    />
    <link
      rel="android-chrome-icon"
      sizes="512x512"
      href="/apple-touch-icon.png"
    />
    <meta name="theme-color" content="#ffffff" />

    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Playfair+Display:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <!-- Primary Meta Tags -->
    <title>Transportes Privados en Magallanes</title>
    <meta
      name="title"
      content="Kuntur - Best Travel Experiences in Magallanes"
    />
    <meta
      name="description"
      content="Descubre la mejor experiencia en transportes en Magallanes y Tierra del fuego."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://transferkuntur.cl/" />
    <meta
      property="og:title"
      content="Kuntur - Agenca de transportes en Magallanes y al antartica Chilena"
    />
    <meta
      property="og:description"
      content="Descubre la mejor experiencia en transportes en Magallanes y Tierra del fuego."
    />
    <meta property="og:image" content="/apple-touch-icon.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://trasnferkuntur.cl/" />
    <meta name="twitter:title" content="Kuntur - Best Travel Experiences ðŸš€" />
    <meta
      name="twitter:description"
      content="Discover the best travel experiences with Kuntur. Explore new places, book adventures, and make unforgettable memories."
    />
    <meta name="twitter:image" content="/apple-touch-icon.png" />

    <!-- Additional SEO Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Kuntur Team" />
  </head>
  <body class="flex flex-col min-h-screen bg-gray-50">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
