---
import { MapPin, Phone } from 'lucide-react';
---

<footer class="mt-auto bg-black text-gray-400 p-8 space-y-8">
  {/* Destinations Section */}
  <div class="space-y-4 ml-2">
    <h2 class="text-white text-xl font-semibold">Destinos</h2>
    <ul class="space-y-2">
      <li class="hover:text-white transition-colors">Natales, Tierra del Fuego</li>
      <li class="hover:text-white transition-colors">Calafate</li>
      <li class="hover:text-white transition-colors">Ushuaia</li>
      <li class="hover:text-white transition-colors">Reserva Magallanes</li>
      <li class="hover:text-white transition-colors">Aeropuerto</li>
      <li class="hover:text-white transition-colors">Movimiento dentro de la ciudad</li>
      <li class="hover:text-white transition-colors">Fuerte Bulnes</li>
    </ul>
  </div>

  {/* Contact Section */}
  <div class="space-y-4">
    <h2 class="text-white text-xl font-semibold">Contacto Kuntur</h2>
    <div class="space-y-3">
      <div class="flex items-center gap-2 hover:text-white transition-colors">
        <Phone class="h-5 w-5" />
        <span>Número</span>
      </div>
      <div class="flex items-center gap-2 hover:text-white transition-colors">
        <MapPin class="h-5 w-5" />
        <span>Dirección</span>
      </div>
    </div>
  </div>

  {/* Copyright */}
  <div class="pt-4 border-t border-gray-800">
    <p class="text-center text-sm text-gray-500 hover:text-white transition-colors">
      Copyright © 2024
    </p>
  </div>
</footer>