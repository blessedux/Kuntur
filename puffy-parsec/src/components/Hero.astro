---
import "../styles/global.css";

---

  {/* Transparent Navbar */}
  <nav class="relative top-0 left-0 w-full z-10 flex items-center justify-between px-8 py-4 text-white bg-transparent">
    <div class="flex items-center space-x-4">
      <img src="/Kuntur_logo.png" alt="Kuntur Logo" class="h-10">
      
    </div>
    <button class="text-white focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <section class="relative h-screen w-full overflow-hidden z-[1]" id="hero">
    {/* Video Background */}
    <div class="absolute top-0 left-0 w-full h-full z-[0]">
      <iframe
        src="https://player.vimeo.com/video/1043407655?background=1&dnt=1&autoplay=1&loop=1&byline=0&title=0&muted=1"
        class="absolute 
          xl:top-1/2 xl:h-[200%] xl:w-[200%] xl:[aspect-ratio:16/9]
          top-[calc(50%-4px)] left-1/2 w-[177.77777778vh] min-w-full min-h-[calc(100%+6px)] 
          -translate-x-1/2 -translate-y-1/2 sm:translate-x-[0%] sm:left-12 sm:w-full"
        frameborder="0"
        allow="autoplay; fullscreen"
        allowfullscreen
      ></iframe>
    </div>
  
    {/* Overlay */}
    <div class="absolute inset-0 bg-black/40"></div>
  
    {/* Content */}
    <div class="relative z-10 flex h-full flex-col items-center justify-center px-4">
      <p class="mb-4 text-center text-xl md:text-2xl font-satisfy text-white">
        Explora la belleza de la Patagonia
      </p>
      <h1 class="mb-10 md:mb-16 text-center text-3xl font-bold text-white md:text-6xl">
        Viajes Privados y <br /> Experiencias Únicas
      </h1>
      <a
        href="https://wa.me/your-phone-number"
        class="px-6 py-3 text-lg font-medium text-white border border-white rounded-full hover:bg-white hover:text-black transition"
      >
        Reserva Ahora →
      </a>
    </div>
  </section>
  